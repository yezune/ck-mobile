<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:id="@+id/grid_item_layout"
    
    >

 

     <kr.actus.ckck.util.SquareImageView
         android:id="@+id/grid_img"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_margin="4dp"
        android:scaleType="centerCrop"
        
     />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#000000"
         android:alpha="0.85"
         android:layout_gravity="bottom"
         android:orientation="vertical"
         android:layout_margin="4dp"
          >
  <TextView
             android:id="@+id/grid_tv_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/menu_title" 
              android:layout_marginLeft="4dp"/>
  <TextView
             android:id="@+id/grid_tv_type"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@android:color/white" 
              android:layout_marginLeft="4dp"/>
   <TextView
             android:id="@+id/grid_tv_min"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@android:color/white" 
              android:layout_marginLeft="4dp"/>
         <TextView
             android:id="@+id/grid_tv_deli"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@android:color/white"
              android:layout_marginLeft="4dp" />

        

         

       
     </LinearLayout>

</FrameLayout>
